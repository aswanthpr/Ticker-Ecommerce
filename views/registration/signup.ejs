<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Ticker</title>
    <link rel="stylesheet" href="/registration/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
  <style>
    body {
      background: linear-gradient(to right, #ffffff, #000000);
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .box-area {
      width: 100%;
      max-width: 900px;
      background: #fff;
      border-radius: 12px;
      overflow: hidden;
    }

    .left-box {
      background: url('/image/loginLogo.png') center/cover no-repeat;
      min-height: 100%;
      border-radius: 12px 0 0 12px;
    }

    .right-box {
      padding: 40px 30px;
    }

    .form-control {
      border-radius: 10px;
      padding: 12px 15px;
    }

    .form-control:focus {
      box-shadow: none;
      border-color: #000000;
    }

    .toggle-password {
      position: absolute;
      right: 15px;
      top: 50%;
      transform: translateY(-50%);
      cursor: pointer;
      color: #666;
    }

    .password-wrapper {
      position: relative;
    }

    .btn-dark {
      background-color: #000000;
      border: none;
    }

    .btn-dark:hover {
      background-color: #000000;
    }

    h6.text-danger {
      font-size: 0.75rem;
      margin-top: 5px;
    }

    @media (max-width: 768px) {
      .left-box {
        display: none;
      }

      .right-box {
        border-radius: 12px;
      }
    }
  </style>
</head>

<body>

  <div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="row box-area shadow-lg">

      <!-- Left Image -->
      <div class="col-md-6 left-box d-none d-md-block"></div>

      <!-- Right Form -->
      <div class="col-md-6 right-box">
        <p class="text-center fs-3 fw-bold mb-4">Create New Account</p>
        <form action="" method="post" id="signupForm">
          <div class="mb-3">
            <input name="name" type="text" id="name" class="form-control" placeholder="Full Name">
            <h6 class="text-danger" id="nameMessage"></h6>
          </div>

          <div class="mb-3">
            <input name="email" type="email" id="email" class="form-control" placeholder="Email">
            <h6 class="text-danger" id="emailMessage"></h6>
          </div>

          <div class="mb-3">
            <input name="phone" type="text" id="phone" class="form-control" placeholder="Phone">
            <h6 class="text-danger" id="phoneMessage"></h6>
          </div>

          <div class="mb-3 password-wrapper">
            <input name="password" type="password" id="password" class="form-control" placeholder="Password">
            <span class="fas fa-eye toggle-password" id="togglePassword"></span>
            <h6 class="text-danger" id="passMessage"></h6>
          </div>

          <div class="mb-3 password-wrapper">
            <input name="confirmPassword" type="password" id="confirmPassword" class="form-control" placeholder="Confirm Password">
            <span class="fas fa-eye toggle-password" id="toggleConfirmPassword"></span>
            <h6 class="text-danger" id="confirmMessage"></h6>
          </div>

          <div class="mb-3">
            <input name="referral" type="text" id="referral" class="form-control" placeholder="Referral Code (Optional)">
            <h6 class="text-danger" id="referralMessage"></h6>
          </div>

          <div class="d-grid mb-3">
            <button type="submit" class="btn btn-dark btn-lg">Sign Up</button>
          </div>

          <div class="text-center">
            <span class="text-muted">Already have an account? <a href="/login" class="fw-bold text-decoration-none text-primary">Log In</a></span>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Scripts -->
  <script>
    const togglePassword = document.querySelector('#togglePassword');
    const password = document.querySelector('#password');
    togglePassword.addEventListener('click', function () {
      const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
      password.setAttribute('type', type);
      this.classList.toggle('fa-eye-slash');
    });

    const toggleConfirmPassword = document.querySelector('#toggleConfirmPassword');
    const confirmPassword = document.querySelector('#confirmPassword');
    toggleConfirmPassword.addEventListener('click', function () {
      const type = confirmPassword.getAttribute('type') === 'password' ? 'text' : 'password';
      confirmPassword.setAttribute('type', type);
      this.classList.toggle('fa-eye-slash');
    });
  </script>

  <script src="/registration/signup.js"></script>
</body>

</html>
