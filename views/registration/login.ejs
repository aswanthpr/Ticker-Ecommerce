<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Login - Ticker</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/registration/style.css">

  <style>
     body {
      background: linear-gradient(to right, #ffffff, #000000);
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    .password-wrapper {
      position: relative;
    }
  
    .toggle-password {
      position: absolute;
      top: 50%;
      right: 12px;
      transform: translateY(-50%);
      cursor: pointer;
      color: #6c757d;
    }

    .login-container {
      max-width: 950px;
      width: 100%;
    }

    .google-btn svg {
      margin-right: 8px;
    }
  </style>
</head>

<body class="bg-light">

  <div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="row bg-white rounded-4 shadow login-container overflow-hidden">

      <!-- Left Image -->
      <div class="col-md-5 p-0">
        <img src="/image/loginLogo.png" class="img-fluid h-100 w-100 object-fit-cover rounded-start" alt="Login Image">
      </div>

      <!-- Login Form -->
      <div class="col-md-7 p-4 d-flex align-items-center">
        <div class="w-100">

          <h2 class="text-center fw-semibold mb-3">Login Now</h2>

          <% if (typeof message !== "undefined") { %>
            <div class="text-danger text-center mb-2" style="font-size: 15px;"><%= message %></div>
          <% } %>

          <form action="" method="post" id="loginForm">

            <!-- Email -->
            <div class="mb-3">
              <label class="form-label fw-semibold">Email</label>
              <input type="email" name="email" id="email" class="form-control bg-light" placeholder="Enter your email">
              <small class="text-danger" id="emailMessage"></small>
            </div>

            <!-- Password -->
            <div class="mb-3">
              <label class="form-label fw-semibold">Password</label>

              <% if (typeof message2 !== "undefined") { %>
                <div class="text-danger mb-1" style="font-size: 15px;"><%= message2 %></div>
              <% } %>

              <div class="password-wrapper">
                <input type="password" name="password" id="pass" class="form-control bg-light" placeholder="Enter password">
                <span id="togglePassword" class="fas fa-eye toggle-password"></span>
              </div>
              <small class="text-danger" id="passMessage"></small>
            </div>

            <!-- Forgot password -->
            <div class="d-flex justify-content-end mb-3">
              <a href="/forget-Pass" class="text-decoration-none small">Forgot Password?</a>
            </div>

            <!-- Submit button -->
            <div class="mb-3">
              <button type="submit" class="btn btn-dark w-100 fw-semibold">Log In</button>
            </div>

            <!-- OR Divider -->
            <div class="text-center my-1 text-muted">OR</div>

            <!-- Google Sign-in -->
            <div class="mb-3">
              <a href="/google" class="btn btn-outline-secondary w-100 d-flex align-items-center justify-content-center google-btn">
               <svg 
              width="20px"
              height="20px"
               
               xmlns="http://www.w3.org/2000/svg" 
               viewBox="0 0 488 512">
               <!--!Font Awesome Free 6.7.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2025 Fonticons, Inc.-->
                <path d="M488 261.8C488 403.3 391.1 504 248 504 110.8 504 0 393.2 0 256S110.8 8 248 8c66.8 0 123 24.5 166.3 64.9l-67.5 64.9C258.5 52.6 94.3 116.6 94.3 256c0 86.5 69.1 156.6 153.7 156.6 98.2 0 135-70.4 140.8-106.9H248v-85.3h236.1c2.3 12.7 3.9 24.9 3.9 41.4z"/></svg>
                Sign in with Google
              </a>
            </div>

            <!-- Signup redirect -->
            <div class="text-center mt-3">
              <span class="small">Don't have an account? <a href="/signup" class="fw-semibold text-decoration-none">Sign Up</a></span>
            </div>

          </form>
        </div>
      </div>

    </div>
  </div>

  <script>
    const togglePassword = document.querySelector('#togglePassword');
    const password = document.querySelector('#pass');

    togglePassword.addEventListener('click', function () {
      const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
      password.setAttribute('type', type);
      this.classList.toggle('fa-eye-slash');
    });
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
