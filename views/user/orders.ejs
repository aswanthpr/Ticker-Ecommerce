    <script>
        //cancel order
        let productId;
        let orderId;

        function cancelProduct(prodId, ordId) {
            productId = prodId;
            orderId = ordId;

        }

        function returnProduct(prodId, ordId) {
            productId = prodId;
            orderId = ordId;

        }

        document.getElementById('cancel-reason-btn').addEventListener('click', async function () {
            let cancellationReason = document.getElementById('cancelReasonSelect').value;
            let errorElement = document.getElementById('cancel-selection-error');
            errorElement.textContent = "";

            if (cancellationReason === "Select Cancellation Reason" || cancellationReason === "") {
                errorElement.textContent = 'Please select a cancellation reason.';
                return;
            }

            let data = {
                cancellationReason: cancellationReason,
                productId: productId,
                orderId: orderId,
            };


            try {
                const response = await fetch('/order/cancel-order', {
                    method: "PATCH",
                    headers: {
                        "Content-Type": "application/json",
                    },
                    body: JSON.stringify(data),
                });
                const resp = await response.json();

                if (resp.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Success',
                        text: resp.message,
                        toast: true,
                        showConfirmButton: false,
                        timer: 2000,
                        position: 'top-end'
                    }).then(() => {
                        window.location.reload();
                    })
                } else {
                    Swal.fire({
                        icon: "error",
                        title: 'Error',
                        text: resp.message,
                        toast: true,
                        showConfirmButton: false,
                        timer: 2000,
                        position: 'top-end',
                    });
                }
            } catch (error) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'An error occurred while cancelling the order. Please try again.',
                    toast: true,
                    showConfirmButton: false,
                    timer: 2000,
                    position: 'top-end'
                });
                console.error('Error:', error);
            }
        });


        const returnReasonSelect = document.getElementById('returnReasonSelect');
        const otherReasonInput = document.getElementById('otherReasonInput');
        const returnReasonBtn = document.getElementById('return-reason-btn');
        const returnSelectionError = document.getElementById('return-selection-error');
        const returnInputError = document.getElementById('return-input-error');

        returnReasonSelect.addEventListener('change', function () {
            if (returnReasonSelect.value === 'Other') {
                otherReasonInput.style.display = 'block';
            } else {
                otherReasonInput.style.display = 'none';
                returnInputError.textContent = '';
            }
            returnSelectionError.textContent = '';
        });

        returnReasonBtn.addEventListener('click', async function () {
            const selectedReason = returnReasonSelect.value;
            let otherReason = '';

            if (selectedReason === 'Other') {
                otherReason = otherReasonInput.value.trim();
                if (otherReason === '') {
                    returnInputError.textContent = 'Please enter a reason.';
                    return;
                }
            }

            if (selectedReason === 'Select Return Reason') {
                returnSelectionError.textContent = 'Please select a return reason.';
                return;
            }
            let reason = selectedReason === 'Other' ? otherReason : selectedReason

            console.log(orderId, productId, reason + " this is we called return data")

            try {
                const response = await fetch('/order/return-order', {
                    method: 'PATCH',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ orderId, productId, reason }),
                });
                const resp = await response.json();

                if (resp.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Success',
                        text: resp.message,
                        toast: true,
                        showConfirmButton: false,
                        timer: 2000,
                        position: 'top-end'
                    }).then(() => {
                        window.location.reload();
                    })
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        toast: true,
                        text: resp.message,
                        showConfirmButton: false,
                        timer: 2000,
                        position: 'top-end'
                    });
                }
            } catch (error) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'An error occurred while submitting the return request. Please try again.',
                    toast: true,
                    showConfirmButton: false,
                    timer: 2000,
                    position: 'top-end'
                });
                console.error('Error:', error);
            }
            $('#returnReasonModal').modal('hide');
        });



