                                                                      <button class="btn btn-info p-2 mx-1"
                                                                          onclick="approveReturn('<%= orderData?.orderId %>', '<%= item?.productId %>','<%= item?.Reason%>')">Approve</button>

                                                                  </div>

                                                              </div>

                                                          </div>
                                                           
                                                          <% } %>
                                                      </div>
                                                    
                                                </div>
                                                
                                            </div>
                                            <hr class="bg-dark">
                                            <% }) %>
                                            
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% } else { %>
                       
                        <p>NO ORDERS FOUND</p>
                        
                    <% } %>
