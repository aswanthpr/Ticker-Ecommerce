    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
  // Function to handle listing and unlisting products
   
   const toggleProductStatus = async (productId, action) => {
    try {
      const result = await Swal.fire({
        title: 'Confirmation',
        text: `Are you sure you want to ${action} this product?`,
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        toast:true,
        confirmButtonText: `Yes, ${action} it!`
      });

      if (result.isConfirmed) {
        const response = await fetch(`/admin/product-${action}/${productId}`, {
          method: 'PATCH',
          headers: {
              "Content-Type": "application/json",
            },
        });

        if (response.ok) {
          const data = await response.json();
          if (data.message) {
            Swal.fire({
              icon: 'success',
              title: 'Success',
              text: data.message,
            
                  toast: true,
                  timer: 2000,
                  position: 'top-end',
                  showConfirmButton: false,
            }).then(() => {
              window.location.reload(); // Reload the page
            });
          } else {
            Swal.fire({
              icon: 'error',
              title: 'Error',
              text: 'An error occurred while updating product status',
                  toast: true,
                  timer: 2000,
                  position: 'top-end',
                  showConfirmButton: false,
            });
          }
        } else {
          throw new Error('Network response was not ok');
        }
      }
    } catch (error) {
      console.error('Error:', error);
      Swal.fire({
        icon: 'error',
        title: 'Error',
        text: 'An error occurred while updating product status',
                  toast: true,
                  timer: 2000,
                  position: 'top-end',
                  showConfirmButton: false,
      });
    }
  };

  // Function to handle product list action
  const listProduct = (productId) => {
    toggleProductStatus(productId, 'list');
  };

  // Function to handle product unlist action
  const unlistProduct = (productId) => {
    toggleProductStatus(productId, 'unlist');
  };



  const deleteProduct = async (productId) => {
    try {
      const result = await Swal.fire({
        title: 'Confirmation',
        text: `Are you sure you want to delete this product?`,
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        toast:true,
        confirmButtonText: `Yes,delete it!`
      });

      if (result.isConfirmed) {
        const response = await fetch(`/admin/delete-product`, {
          method: 'DELETE',
          headers: {
              "Content-Type": "application/json",
            },
            body:JSON.stringify({productId})
        });

        if (response.ok) {
          const data = await response.json();
          if (data.message) {
            Swal.fire({
              icon: 'success',
              title: 'Success',
              text: data.message,
            
                  toast: true,
                  timer: 2000,
                  position: 'top-end',
                  showConfirmButton: false,
            }).then(() => {
              window.location.reload(); // Reload the page
            });
          } else {
            Swal.fire({
              icon: 'error',
              title: 'Error',
              text: 'An error occurred while updating product status',
                  toast: true,
                  timer: 2000,
                  position: 'top-end',
                  showConfirmButton: false,
            });
          }
        } else {
          throw new Error('Network response was not ok');
        }
      }
    } catch (error) {
      console.error('Error:', error);
      Swal.fire({
        icon: 'error',
        title: 'Error',
        text: 'An error occurred while updating product status',
                  toast: true,
                  timer: 2000,
                  position: 'top-end',
                  showConfirmButton: false,
      });
    }
  };
</script>
